<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_result"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#fff"
    tools:context="com.example.applemacbookpro.teleport.Result">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Search Result"
        android:textColor="#0044ff"
        android:textAlignment="center"
        android:textSize="48dp"
        android:id="@+id/searchresult"/>


    <Button
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:layout_marginTop="22dp"
        android:background="@drawable/button"
        android:text="Book"
        android:textSize="25dp"
        android:onClick="onclickbook"
        android:layout_below="@+id/textView20"
        android:layout_centerHorizontal="true"
        android:id="@+id/button2" />

    <TextView
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:textColor="#0044ff"
        android:layout_marginTop="48dp"
        android:padding="10dp"
        android:text="229 - Medchal to Secunderabad"
        android:textSize="22dp"
        android:onClick="onclickbook"
        android:id="@+id/textView18"
        android:layout_below="@+id/searchresult"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:textColor="#0044ff"
        android:padding="10dp"
        android:text="219 - Medchal to Patancheru"
        android:textSize="22dp"
        android:onClick="onclickbook"
        android:id="@+id/textView19"
        android:layout_below="@+id/textView18"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:textColor="#0044ff"
        android:padding="10dp"
        android:text="219/229 - Medchal to uppal"
        android:textSize="22dp"
        android:onClick="onclickbook"
        android:id="@+id/textView20"
        android:layout_below="@+id/textView19"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
