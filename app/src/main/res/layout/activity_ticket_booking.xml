<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_ticket_booking"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#fff"
    tools:context="com.example.applemacbookpro.teleport.TicketBooking">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Booking"
        android:textColor="#0044ff"
        android:textSize="38dp"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textView15" />

    <EditText
        android:layout_width="260dp"
        android:layout_height="50dp"
        android:textColor="#0044ff"
        android:hint="Number of Tickets"
        android:padding="10dp"
        android:textColorHint="#15bae7"
        android:textSize="25dp"
        android:background="@drawable/boundary"
        android:id="@+id/quantity"
        android:inputType="text"
        android:layout_marginTop="67dp"
        android:layout_below="@+id/textView15"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:layout_marginTop="51dp"
        android:background="@drawable/button"
        android:text="Proceed"
        android:textSize="25dp"
        android:onClick="onclickproceed"
        android:id="@+id/button"
        android:layout_below="@+id/quantity"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
