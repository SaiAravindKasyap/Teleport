<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_bus_pass_fare"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#fff"
    tools:context="com.example.applemacbookpro.teleport.BusPassFare">


    <TextView
        android:text="Bus Pass Fare"
        android:textSize="39dp"
        android:textColor="#0044ff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView16" />

    <TextView
        android:text="Total Fare =  Rs 450"
        android:textColor="#0044ff"
        android:textSize="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView16"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="37dp"
        android:layout_marginStart="37dp"
        android:layout_marginTop="88dp"
        android:id="@+id/textView17" />

    <Button
        android:layout_width="200dp"
        android:layout_height="48dp"
        android:background="@drawable/button"
        android:layout_marginTop="37dp"
        android:text="Proceed"
        android:textSize="26dp"
        android:elevation="39dp"
        android:textColor="#ffffff"
        android:onClick="onclickpr"
        android:id="@+id/btn_br"
        android:layout_below="@+id/textView17"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
